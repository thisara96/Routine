<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HouseMap">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="#fece2f"
            android:padding="10dp">


            <ImageView
                android:id="@+id/planView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true" />



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="20dp">

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="MEAN"
                android:background="#000"
                android:onClick="GotoMean"
                android:textColor="#fff"
                android:id="@+id/mean_btn"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                />

            <Button
                android:id="@+id/today_btn"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="226dp"
                android:background="#000"
                android:onClick="GotoToday"
                android:padding="10dp"
                android:text="Today"
                android:textColor="#fff" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="20dp">

            <Button
                android:id="@+id/scanner_btn"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:background="#000"
                android:padding="10dp"
                android:onClick="GotoScanner"
                android:text="SCANNER NETWORK"
                android:textColor="#fff" />

            <Button
                android:id="@+id/tomorrow_btn"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="226dp"
                android:background="#000"
                android:onClick="GotoTomorrow"
                android:padding="10dp"
                android:text="tomorrow"
                android:textColor="#fff" />


        </RelativeLayout>




    </LinearLayout>

</ScrollView>